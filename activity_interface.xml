<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.in.radhe_krishna.wc.Interface">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_margin="18dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/scback"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/team1"
                android:textStyle="bold"
                android:textColor="#000"

                android:maxLines="2"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="/"
                android:textSize="30dp"
                android:textColor="#000"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/team2"
                android:textStyle="bold"
                android:maxLines="2"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/playingteam"
                android:textStyle="bold"
                android:textColor="#e41010"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/run"
                android:textStyle="bold"
                android:textColor="#e41010"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="/"
                android:textSize="35dp"
                android:textColor="#e41010"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/wicket"
                android:textStyle="bold"
                android:textColor="#e41010"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout

            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/overword"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="#1e1e20"
                android:text="Over  : "
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/over"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="#1e1e20"
                android:textAlignment="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/result"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#0c13cf"
            android:text="Result  : "
            android:textAlignment="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/resultdec"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="#0c13cf"
            android:textAlignment="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:id="@+id/bt1"
        android:text="@string/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
